<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="VOSIZ Professional Coding Standard">
    <description>Professional PHP Coding Standards for VOSIZ E-commerce Platform</description>
    
    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12"/>
    
    <!-- Include the whole app directory -->
    <file>app</file>
    <file>tests</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    
    <!-- Exclude vendor and cache directories -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    
    <!-- Custom Rules for Professional Development -->
    
    <!-- Complexity Rules -->
    <rule ref="Generic.Metrics.CyclomaticComplexity">
        <properties>
            <property name="complexity" value="10"/>
            <property name="absoluteComplexity" value="15"/>
        </properties>
    </rule>
    
    <rule ref="Generic.Metrics.NestingLevel">
        <properties>
            <property name="nestingLevel" value="5"/>
            <property name="absoluteNestingLevel" value="10"/>
        </properties>
    </rule>
    
    <!-- Code Quality Rules -->
    <rule ref="Generic.CodeAnalysis.EmptyStatement"/>
    <rule ref="Generic.CodeAnalysis.ForLoopShouldBeWhileLoop"/>
    <rule ref="Generic.CodeAnalysis.UnconditionalIfStatement"/>
    <rule ref="Generic.CodeAnalysis.UnnecessaryFinalModifier"/>
    
    <!-- Documentation Rules -->
    <rule ref="Squiz.Commenting.ClassComment"/>
    <rule ref="Squiz.Commenting.FunctionComment">
        <exclude name="Squiz.Commenting.FunctionComment.MissingParamTag"/>
        <exclude name="Squiz.Commenting.FunctionComment.ParamCommentFullStop"/>
    </rule>
    
    <!-- Security Rules -->
    <rule ref="Generic.PHP.NoSilencedErrors"/>
    <rule ref="MySource.PHP.EvalObjectFactory"/>
    
    <!-- Performance Rules -->
    <rule ref="Squiz.PHP.DisallowMultipleAssignments"/>
    <rule ref="Generic.PHP.DisallowShortOpenTag"/>
    
    <!-- Laravel Specific Rules -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
        <exclude-pattern>*.blade.php</exclude-pattern>
    </rule>
    
    <!-- Exclude Laravel auto-generated files -->
    <exclude-pattern>app/Providers/RouteServiceProvider.php</exclude-pattern>
    <exclude-pattern>app/Http/Kernel.php</exclude-pattern>
    <exclude-pattern>app/Console/Kernel.php</exclude-pattern>
    <exclude-pattern>app/Exceptions/Handler.php</exclude-pattern>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors -->
    <arg name="colors"/>
    
    <!-- Show sniff codes -->
    <arg value="s"/>
    
    <!-- Parallel processing -->
    <arg name="parallel" value="8"/>
</ruleset>