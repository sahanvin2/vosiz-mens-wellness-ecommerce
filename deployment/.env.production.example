# Production Environment Configuration for Vosiz
# Copy this to .env.production and customize for your deployment

# Application
APP_NAME="Vosiz Men's Wellness"
APP_ENV=production
APP_KEY=base64:your-generated-32-character-key-here
APP_DEBUG=false
APP_URL=https://vosiz.yourdomain.com

# Database - MySQL (Primary)
DB_CONNECTION=mysql
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=3306
DB_DATABASE=vosiz_production
DB_USERNAME=vosiz_admin
DB_PASSWORD=your-secure-mysql-password

# Database - MongoDB (Products)
MONGODB_DSN=mongodb+srv://username:password@cluster.mongodb.net/vosiz_products

# Cache & Sessions
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
REDIS_HOST=your-elasticache-endpoint.amazonaws.com
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue System
QUEUE_CONNECTION=sqs
SQS_KEY=your-sqs-access-key
SQS_SECRET=your-sqs-secret-key
SQS_PREFIX=https://sqs.us-east-1.amazonaws.com/your-account-id
SQS_QUEUE=vosiz-production-queue

# File Storage - Amazon S3
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=your-s3-access-key
AWS_SECRET_ACCESS_KEY=your-s3-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=vosiz-production-uploads
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_URL=https://vosiz-production-uploads.s3.amazonaws.com

# CDN - CloudFront
CDN_URL=https://your-cloudfront-distribution.cloudfront.net

# Mail Service - Amazon SES
MAIL_MAILER=ses
MAIL_HOST=email-smtp.us-east-1.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=your-ses-smtp-username
MAIL_PASSWORD=your-ses-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@vosiz.com
MAIL_FROM_NAME="${APP_NAME}"

# Payment Processing
STRIPE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Social Authentication (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting (Optional - for real-time features)
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-app-key
PUSHER_APP_SECRET=your-pusher-app-secret
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Performance
OPCACHE_ENABLE=1
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Security
SANCTUM_STATEFUL_DOMAINS=vosiz.yourdomain.com
SESSION_DOMAIN=.yourdomain.com

# Search (Optional - Elasticsearch/Algolia)
SCOUT_DRIVER=algolia
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_SECRET=your-algolia-admin-key

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Error Tracking (Optional)
SENTRY_LARAVEL_DSN=https://your-sentry-dsn@sentry.io/project-id

# Custom Vosiz Settings
VOSIZ_THEME=dark
VOSIZ_CURRENCY=USD
VOSIZ_TIMEZONE=UTC
VOSIZ_ADMIN_EMAIL=admin@vosiz.com